<!DOCTYPE html>
<html>
<body>
    <form method="POST" action="/add">
        <section>
            <!-- Campo oculto para el id_estudiante -->
            <input type="hidden" name="idProducto" id="idProducto">
            <div class="row mb-1">
                <label class="col-sm-4 col-form-label" for="producto">Producto:</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="producto" required><br>
                </div>
            </div>

            <div class="row mb-1">
                <label class="col-sm-4 col-form-label" for="descripcion">Descripcion:</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="descripcion" required><br>
                </div>
            </div>

            <div class="row mb-1">
                <label class="col-sm-4 col-form-label" for="precio_costo">Precio costo:</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" step="0.01" name="precio_costo" required><br>
                </div>
            </div>
            <div class="row mb-1">
                <label class="col-sm-4 col-form-label" for="precio_venta">Precio Venta:</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" step="0.01" name="precio_venta"><br>
                </div>
            </div>
            <div class="row mb-1">
                <label class="col-sm-4 col-form-label" for="existencia">Existencia:</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" step="0.01" name="existencia"><br>
                </div>
            </div>
            <div class="row mb-1">
                <label class="col-sm-4 col-form-label" for="idMarca">Marca:</label>
                <div class="col-sm-8">
                    <select class="form-control" name="idMarca">
                        <% marcas.forEach(marca=> { %>
                            <option value="<%= marca.idMarca %>">
                                <%= marca.marca %>
                            </option>
                            <% }); %>
                    </select><br>
                </div>
            </div>
            <div id="space-for-button">
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit" name="create" value="true">Agregar</button>
                </div>
            </div>
        </section>
    </form>
</body>

</html>